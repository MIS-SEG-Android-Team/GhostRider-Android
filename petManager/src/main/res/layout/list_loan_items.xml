<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingVertical="5dp">

    <LinearLayout
        android:id="@+id/parent_cons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:elevation="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_empinstallment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/line"
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:background="?attr/colorPrimary"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/loantype"
                app:layout_constraintBottom_toBottomOf="@+id/loandate"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/loantype"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                app:layout_constraintStart_toEndOf="@+id/line"
                app:layout_constraintWidth_percent="0.5"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/loan_status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/cross_red"
                app:layout_constraintWidth_percent="0.5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/loantype"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/loandate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                app:layout_constraintTop_toBottomOf="@+id/loantype"
                app:layout_constraintStart_toEndOf="@+id/line"
                app:layout_constraintWidth_percent="0.5"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/loanamt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@+id/loan_status"
                app:layout_constraintStart_toEndOf="@+id/loandate"
                app:layout_constraintWidth_percent="0.5"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_empbuttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_approve"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Approve"
                android:backgroundTint="@color/success_green"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btn_disapprove"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_disapprove"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Disapprove"
                android:backgroundTint="@color/cross_red"
                android:layout_marginStart="5dp"
                app:layout_constraintStart_toEndOf="@+id/btn_approve"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardUseCompatPadding="true"
        app:cardPreventCornerOverlap="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_loaninfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/empname"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:padding="10dp"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/emppos"
                    app:layout_constraintWidth_percent="0.5" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/emppos"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:padding="10dp"
                    android:visibility="gone"
                    app:layout_constraintStart_toEndOf="@+id/empname"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintWidth_percent="0.5" />

                <View
                    android:id="@+id/headline"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="?attr/colorPrimary"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@+id/empname"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/lbl_loanname"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Loan Type"
                    android:textStyle="bold"
                    android:padding="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/headline"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/emppos"
                    app:layout_constraintWidth_percent="0.5" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/loanname"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="N/A"
                    android:padding="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/headline"
                    app:layout_constraintStart_toEndOf="@+id/empname"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintWidth_percent="0.5" />

                <View
                    android:id="@+id/line1"
                    android:layout_width="match_parent"
                    android:layout_height="0.75dp"
                    android:background="?attr/colorPrimary"
                    app:layout_constraintTop_toBottomOf="@+id/lbl_loanname"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/lbl_loandate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Loan Date"
                    android:textStyle="bold"
                    android:padding="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/line1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/emppos"
                    app:layout_constraintWidth_percent="0.5" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/loandate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="N/A"
                    android:padding="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/line1"
                    app:layout_constraintStart_toEndOf="@+id/empname"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintWidth_percent="0.5" />

                <View
                    android:id="@+id/line2"
                    android:layout_width="match_parent"
                    android:layout_height="0.75dp"
                    android:background="?attr/colorPrimary"
                    app:layout_constraintTop_toBottomOf="@+id/lbl_loandate"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/lbl_loanamt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Loan Amount"
                    android:textStyle="bold"
                    android:padding="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/line2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/emppos"
                    app:layout_constraintWidth_percent="0.5" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/loanamt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="0.00"
                    android:padding="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/line2"
                    app:layout_constraintStart_toEndOf="@+id/empname"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintWidth_percent="0.5" />

                <View
                    android:id="@+id/line3"
                    android:layout_width="match_parent"
                    android:layout_height="0.75dp"
                    android:background="?attr/colorPrimary"
                    app:layout_constraintTop_toBottomOf="@+id/loanamt"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/lbl_loanterms"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Loan Terms"
                    android:textStyle="bold"
                    android:padding="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/line3"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/emppos"
                    app:layout_constraintWidth_percent="0.5" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/loanterms"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="N/A"
                    android:padding="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/line3"
                    app:layout_constraintStart_toEndOf="@+id/empname"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintWidth_percent="0.5" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/lbl_loanstat"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Loan Status"
                    android:textStyle="bold"
                    android:padding="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/lbl_loanterms"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/emppos"
                    app:layout_constraintWidth_percent="0.5" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/loanstat"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="No Status"
                    android:padding="10dp"
                    android:textColor="@color/cross_red"
                    app:layout_constraintTop_toBottomOf="@+id/loanterms"
                    app:layout_constraintStart_toEndOf="@+id/empname"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintWidth_percent="0.5" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_installment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Installment Details"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:padding="10dp"/>

                <View
                    android:id="@+id/line"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="?attr/colorPrimary"
                    app:layout_constraintTop_toBottomOf="@+id/title"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/lbl_firstpay"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="First Pay"
                    android:textStyle="bold"
                    android:padding="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/line"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintWidth_percent="0.5"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txt_firstpay"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="N/A"
                    android:padding="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/line"
                    app:layout_constraintStart_toEndOf="@+id/lbl_firstpay"
                    app:layout_constraintWidth_percent="0.5"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/lbl_mnthlypay"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Monthly Payment"
                    android:textStyle="bold"
                    android:padding="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/lbl_firstpay"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintWidth_percent="0.5"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txt_mnthlypay"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="0.00"
                    android:padding="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/txt_firstpay"
                    app:layout_constraintStart_toEndOf="@+id/lbl_mnthlypay"
                    app:layout_constraintWidth_percent="0.5"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/lbl_mnthlintrst"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Monthly Interest"
                    android:textStyle="bold"
                    android:padding="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/lbl_mnthlypay"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintWidth_percent="0.5"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txt_mnthlintrst"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="0.00"
                    android:padding="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/txt_mnthlypay"
                    app:layout_constraintStart_toEndOf="@+id/lbl_mnthlintrst"
                    app:layout_constraintWidth_percent="0.5"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
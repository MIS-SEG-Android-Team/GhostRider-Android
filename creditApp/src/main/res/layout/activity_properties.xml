<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/GhostRiderMaterialTheme.WhiteBG"
    tools:context=".Activities.Activity_Properties">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/GhostRiderMaterialTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_Properties"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/material_tool_bar"
            android:popupTheme="@style/GhostRiderMaterialTheme.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                style="@style/HeaderLabelBlack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sLblPropertyInfo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_cap_propertyLot1"
                    style="@style/TextInputStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Lot 1 Address">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/tie_cap_propertyLot1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:digits="@string/free_text_restriction"
                        android:imeOptions="actionNext"
                        android:inputType="textPostalAddress|textCapWords"
                        android:maxLength="50"
                        android:maxLines="1"
                        android:nextFocusForward="@id/tie_cap_cmrFirstname"
                        android:singleLine="true"
                        android:textColor="@color/material_black" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_cap_propertyLot2"
                    style="@style/TextInputStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Lot 2 Address">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/tie_cap_propertyLot2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:digits="@string/free_text_restriction"
                        android:imeOptions="actionNext"
                        android:inputType="textPostalAddress|textCapWords"
                        android:maxLength="50"
                        android:maxLines="1"
                        android:nextFocusForward="@id/tie_cap_cmrFirstname"
                        android:singleLine="true"
                        android:textColor="@color/material_black" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_cap_propertyLot3"
                    style="@style/TextInputStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Lot 3 Address">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/tie_cap_propertyLot3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:digits="@string/free_text_restriction"
                        android:imeOptions="actionNext"
                        android:inputType="textPostalAddress|textCapWords"
                        android:maxLength="50"
                        android:maxLines="1"
                        android:nextFocusForward="@id/tie_cap_cmrFirstname"
                        android:singleLine="true"
                        android:textColor="@color/material_black" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="@color/textColor_Black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <CheckBox
                    android:id="@+id/cb_4Wheels"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Customer owns a 4 wheel vehicle"
                    tools:ignore="HardcodedText" />

                <CheckBox
                    android:id="@+id/cb_3Wheels"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Customer owns a 3 wheel vehicle (Ex. Tricycle)."
                    tools:ignore="HardcodedText" />

                <CheckBox
                    android:id="@+id/cb_2Wheels"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Customer owns a 2 wheel vehicle (Bike, Single Motorcycle)."
                    tools:ignore="HardcodedText" />

                <CheckBox
                    android:id="@+id/cb_Aircon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Customer owns an air condition"
                    tools:ignore="HardcodedText" />

                <CheckBox
                    android:id="@+id/cb_refrigerator"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Customer owns refrigerator"
                    tools:ignore="HardcodedText" />

                <CheckBox
                    android:id="@+id/cb_television"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Customer owns television/smart TV"
                    tools:ignore="HardcodedText" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="300dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_creditAppPrvs"
                        style="@style/NavigationButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:drawableLeft="@drawable/ic_nav_left"
                        android:text="@string/sbtnPrvs"
                        tools:ignore="RelativeOverlap" />

                    <Button
                        android:id="@+id/btn_creditAppNext"
                        style="@style/NavigationButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:drawableEnd="@drawable/ic_nav_right"
                        android:drawableRight="@drawable/ic_nav_right"
                        android:text="@string/sbtnNext"
                        tools:ignore="RelativeOverlap" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>
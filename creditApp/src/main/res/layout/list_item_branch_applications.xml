<com.google.android.material.card.MaterialCardView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardCornerRadius="10dp"
    app:cardPreventCornerOverlap="true"
    app:cardElevation="5dp"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="3dp"
    android:theme="@style/GhostRiderMaterialTheme"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="15dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/lbl_listLog_GoCasNo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.8"
                android:text="GoCas No. : 437Z19000052"
                android:textSize="16sp"
                android:gravity="start"
                tools:ignore="HardcodedText"
                android:fontFamily="@font/roboto_medium"
                tools:targetApi="jelly_bean"/>

        </LinearLayout>

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:padding="3dp"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/lbl_listLog_applicantName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Garcia, Michael Permison"
            android:textSize="16sp"
            tools:ignore="HardcodedText"
            android:fontFamily="@font/roboto_medium"
            tools:targetApi="jelly_bean"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".6"
                android:text="Transaction No. :"
                android:textSize="16sp"
                android:gravity="start"
                tools:ignore="HardcodedText"
                android:fontFamily="@font/roboto_regular"
                tools:targetApi="jelly_bean"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/lbl_listLog_applicationTransNo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="#437Z19000052"
                android:textSize="16sp"
                android:gravity="end"
                tools:ignore="HardcodedText"
                android:fontFamily="@font/roboto_regular"
                tools:targetApi="jelly_bean"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:text="Date Applied :"
                android:textSize="16sp"
                android:gravity="start"
                tools:ignore="HardcodedText"
                android:fontFamily="@font/roboto_regular"
                tools:targetApi="jelly_bean"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/lbl_listLog_applicationDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                tools:ignore="HardcodedText"
                android:fontFamily="@font/roboto_regular"
                tools:targetApi="jelly_bean"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:text="Status :"
                android:textSize="16sp"
                android:gravity="start"
                tools:ignore="HardcodedText"
                android:fontFamily="@font/roboto_regular"
                tools:targetApi="jelly_bean"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/lbl_listLog_applicationWithCI"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Approve with CI"
                android:gravity="end"
                tools:ignore="HardcodedText"
                android:fontFamily="@font/roboto_regular"
                tools:targetApi="jelly_bean"/>
        </LinearLayout>

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:padding="3dp"/>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardUseCompatPadding="true"
    android:background="@color/material_lightgrey"
    app:cardCornerRadius="10dp"
    app:cardPreventCornerOverlap="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/lbl_list_transNox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.8"
                android:text="GoCas No. : 437Z19000052"
                android:textSize="16sp"
                android:textColor="@color/textColor_Black"
                android:gravity="start"
                tools:ignore="HardcodedText"
                android:fontFamily="@font/roboto"
                tools:targetApi="jelly_bean"/>



        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:padding="3dp"
            android:layout_marginVertical="3dp"
            android:background="@color/textColor_Black"/>

        <TextView
            android:id="@+id/lbl_list_applicantName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Garcia, Michael Permison"
            android:textSize="16sp"
            android:textColor="@color/textColor_Black"
            tools:ignore="HardcodedText"
            android:fontFamily="@font/roboto_bold"
            tools:targetApi="jelly_bean"
            android:layout_marginVertical="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="1dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:text="Date Applied :"
                android:textSize="14sp"
                android:textColor="@color/textColor_Black"
                android:gravity="start"
                tools:ignore="HardcodedText"
                android:fontFamily="@font/roboto"
                tools:targetApi="jelly_bean"/>

            <TextView
                android:id="@+id/lbl_list_applicationDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="14sp"
                android:text="December 12, 2019"
                android:textColor="@color/textColor_Black"
                android:gravity="end"
                tools:ignore="HardcodedText"
                android:fontFamily="@font/roboto"
                tools:targetApi="jelly_bean"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="1dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:text="Model :"
                android:textSize="14sp"
                android:textColor="@color/textColor_Black"
                android:gravity="start"
                tools:ignore="HardcodedText"
                android:fontFamily="@font/roboto"
                tools:targetApi="jelly_bean"/>

            <TextView
                android:id="@+id/lbl_modelName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="14sp"
                android:text="December 12, 2019"
                android:textColor="@color/textColor_Black"
                android:gravity="end"
                tools:ignore="HardcodedText"
                android:fontFamily="@font/roboto"
                tools:targetApi="jelly_bean"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="1dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:text="Term :"
                android:textSize="14sp"
                android:textColor="@color/textColor_Black"
                android:gravity="start"
                tools:ignore="HardcodedText"
                android:fontFamily="@font/roboto"
                tools:targetApi="jelly_bean"/>

            <TextView
                android:id="@+id/lbl_accntTerm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="December 12, 2019"
                android:textColor="@color/textColor_Black"
                android:gravity="end"
                android:textSize="14sp"
                tools:ignore="HardcodedText"
                android:fontFamily="@font/roboto"
                tools:targetApi="jelly_bean"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="1dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:text="Mobile # :"
                android:textSize="14sp"
                android:textColor="@color/textColor_Black"
                android:gravity="start"
                tools:ignore="HardcodedText"
                android:fontFamily="@font/roboto"
                tools:targetApi="jelly_bean"/>

            <TextView
                android:id="@+id/lbl_mobileNo"
                android:layout_width="0dp"
                android:textSize="14sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="December 12, 2019"
                android:textColor="@color/textColor_Black"
                android:gravity="end"
                tools:ignore="HardcodedText"
                android:fontFamily="@font/roboto"
                tools:targetApi="jelly_bean"/>

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="1dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:text="Status :"
                android:textSize="14sp"
                android:textColor="@color/textColor_Black"
                android:gravity="start"
                tools:ignore="HardcodedText"
                android:fontFamily="@font/roboto"
                tools:targetApi="jelly_bean"/>

            <TextView
                android:id="@+id/lbl_list_applicationWithCI"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Approve with CI"
                android:textColor="@color/textColor_Black"
                android:gravity="end"
                tools:ignore="HardcodedText"
                android:fontFamily="@font/roboto"
                android:textSize="14sp"
                tools:targetApi="jelly_bean"/>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
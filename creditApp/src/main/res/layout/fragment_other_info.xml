        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Regular_Label"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:text="@string/sLabelQMonthlyAmort"/>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/CustomDropDownTilStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Select Unit Payer">
            <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                android:id="@+id/spinner_cap_monthlyPayer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:padding="16dp"
                android:cursorVisible="false"
                android:clickable="false"
                android:inputType="none" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_cap_sPyr2Buyr"
            style="@style/CustomDropDownTilStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Select other payer">
            <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                android:id="@+id/spinner_cap_sPyr2Buyr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:padding="16dp"
                android:cursorVisible="false"
                android:clickable="false"
                android:inputType="none" />
        </com.google.android.material.textfield.TextInputLayout>

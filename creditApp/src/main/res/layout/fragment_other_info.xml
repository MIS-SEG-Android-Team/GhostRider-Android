        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_cap_CompanyInfoSource"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/sHintSpecify"
            style="@style/TextInputStyle">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tie_cap_CompanyInfoSource"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="50"/>
        </com.google.android.material.textfield.TextInputLayout>
        <!---->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F88222"
            android:fontFamily="@font/roboto_medium"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:text="PERSONAL REFERENCES"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/material_white"
            tools:ignore="HardcodedText"
            tools:targetApi="jelly_bean" />

        <LinearLayout
            android:id="@+id/linear_references"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_cap_referenceName"
                style="@style/TextInputStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name"
                android:textColorHint="@color/guanzon_dark_grey"
                tools:ignore="HardcodedText">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tie_cap_referenceName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:imeOptions="actionNext"
                    android:inputType="textPersonName"
                    android:digits="@string/free_text_restriction"
                    android:maxLength="100"
                    android:nextFocusForward="@id/tie_cap_refereceContact"
                    android:textColor="@color/material_black"
                    tools:ignore="RtlSymmetry" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_cap_referenceContact"
                style="@style/TextInputStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Contact"
                android:textColorHint="@color/guanzon_dark_grey"
                tools:ignore="HardcodedText">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tie_cap_refereceContact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionNext"
                    android:inputType="number|none"
                    android:maxLength="11"
                    android:nextFocusForward="@id/tie_cap_refereceAddress"
                    android:textColor="@color/material_black"
                    tools:ignore="RtlSymmetry" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_cap_referenceAddress"
                style="@style/TextInputStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phase#/Lot#/Sitio/Street/Barangay"
                android:textColorHint="@color/guanzon_dark_grey"
                tools:ignore="HardcodedText">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tie_cap_refereceAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:imeOptions="actionNext"
                    android:inputType="textPersonName"
                    android:digits="@string/free_text_restriction"
                    android:maxLength="100"
                    android:nextFocusForward="@id/tie_cap_referenceAddProv"
                    android:textColor="@color/material_black"
                    tools:ignore="RtlSymmetry" />

            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:ignore="DisableBaselineAlignment">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_cap_referenceAddProv"
                    style="@style/TextInputStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:hint="@string/sHintBpProv"
                    android:textColorHint="@color/guanzon_dark_grey"
                    tools:ignore="HardcodedText">

                    <AutoCompleteTextView
                        android:id="@+id/tie_cap_referenceAddProv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textAutoComplete|textAutoCorrect"
                        android:maxLength="20"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:paddingStart="10dp"
                        android:paddingLeft="10dp"
                        android:imeOptions="actionNext"
                        android:nextFocusForward="@id/tie_cap_referenceAddTown"
                        android:textColor="@color/material_black"
                        tools:ignore="LabelFor,RtlSymmetry" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_cap_referenceAddTown"
                    style="@style/TextInputStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:hint="@string/sHintTown"
                    android:textColorHint="@color/guanzon_dark_grey"
                    tools:ignore="HardcodedText">

                    <AutoCompleteTextView
                        android:id="@+id/tie_cap_referenceAddTown"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textAutoComplete|textAutoCorrect"
                        android:maxLength="20"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:paddingStart="10dp"
                        android:paddingLeft="10dp"
                        android:imeOptions="actionDone"
                        android:textColor="@color/material_black"
                        tools:ignore="LabelFor,RtlSymmetry" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_fragment_others_addReference"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cornerRadius="10dp"
                style="@style/MaterialButtonAccent"
                android:fontFamily="@font/roboto_medium"
                android:text="Add Reference"
                tools:targetApi="lollipop"
                android:layout_gravity="right"
                tools:ignore="HardcodedText" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview_references"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"/>

        </LinearLayout>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_creditAppNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sbtnNext"
            style="@style/MaterialButtonAccent"/>

    </LinearLayout>

</ScrollView>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/GhostRiderMaterialTheme.WhiteBG"
    tools:context=".Fragment.Fragment_OtherInfo">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/HeaderLabelBlack"
                android:text="@string/sLblOtherInfo"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Regular_Label"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:text="@string/sLabelQUnitUser"/>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/CustomDropDownTilStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Unit User">

                <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                    android:id="@+id/spinner_cap_unitUser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:padding="16dp"
                    android:cursorVisible="false"
                    android:clickable="false"
                    android:inputType="none" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_cap_otherUser"
                style="@style/CustomDropDownTilStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Other User">

                <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                    android:id="@+id/spinner_cap_otherUser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:padding="16dp"
                    android:cursorVisible="false"
                    android:clickable="false"
                    android:inputType="none" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Regular_Label"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:text="@string/sLabelQUnitPurpose"/>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/CustomDropDownTilStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Unit Purpose">
                <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                    android:id="@+id/spinner_cap_purposeOfBuying"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:padding="16dp"
                    android:cursorVisible="false"
                    android:clickable="false"
                    android:inputType="none" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Regular_Label"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:text="@string/sLabelQMonthlyAmort"/>
            <com.google.android.material.textfield.TextInputLayout
                style="@style/CustomDropDownTilStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Unit Payer">
                <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                    android:id="@+id/spinner_cap_monthlyPayer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:padding="16dp"
                    android:cursorVisible="false"
                    android:clickable="false"
                    android:inputType="none" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_cap_otherPayer"
                style="@style/CustomDropDownTilStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Other Payer">

                <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                    android:id="@+id/spinner_cap_otherPayer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:padding="16dp"
                    android:cursorVisible="false"
                    android:clickable="false"
                    android:inputType="none" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                style="@style/Regular_Label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sLabelQDiscoverUs"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/CustomDropDownTilStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Where do you hear about us?">

                <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                    android:id="@+id/spinner_cap_source"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:inputType="none"
                    android:padding="16dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_cap_otherSource"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/sHintSpecify"
                style="@style/TextInputStyle">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tie_cap_otherSource"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLength="50"/>
            </com.google.android.material.textfield.TextInputLayout>
            <!---->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/HeaderLabelBlack"
                android:text="@string/sLblPersonalRefs"/>

            <LinearLayout
                android:id="@+id/linear_references"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginBottom="250dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_cap_referenceName"
                    style="@style/TextInputStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Name"
                    android:textColorHint="@color/guanzon_dark_grey"
                    tools:ignore="HardcodedText">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/tie_cap_referenceName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:imeOptions="actionNext"
                        android:inputType="textPersonName"
                        android:digits="@string/free_text_restriction"
                        android:maxLength="100"
                        android:nextFocusForward="@id/tie_cap_refereceContact"
                        android:textColor="@color/material_black"
                        tools:ignore="RtlSymmetry" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_cap_referenceContact"
                    style="@style/TextInputStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Contact"
                    android:textColorHint="@color/guanzon_dark_grey"
                    tools:ignore="HardcodedText">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/tie_cap_refereceContact"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:imeOptions="actionNext"
                        android:inputType="number|none"
                        android:maxLength="11"
                        android:nextFocusForward="@id/tie_cap_refereceAddress"
                        android:textColor="@color/material_black"
                        tools:ignore="RtlSymmetry" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_cap_referenceAddress"
                    style="@style/TextInputStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Phase#/Lot#/Sitio/Street/Barangay"
                    android:textColorHint="@color/guanzon_dark_grey"
                    tools:ignore="HardcodedText">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/tie_cap_refereceAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:imeOptions="actionNext"
                        android:inputType="textPersonName"
                        android:digits="@string/free_text_restriction"
                        android:maxLength="100"
                        android:nextFocusForward="@id/tie_cap_referenceAddProv"
                        android:textColor="@color/material_black"
                        tools:ignore="RtlSymmetry" />

                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    tools:ignore="DisableBaselineAlignment">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_cap_referenceAddProv"
                        style="@style/TextInputStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:hint="@string/sHintProvince"
                        android:textColorHint="@color/guanzon_dark_grey"
                        tools:ignore="HardcodedText">

                        <AutoCompleteTextView
                            android:id="@+id/tie_cap_referenceAddProv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textAutoComplete|textAutoCorrect"
                            android:maxLength="20"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:paddingStart="10dp"
                            android:paddingLeft="10dp"
                            android:imeOptions="actionNext"
                            android:nextFocusForward="@id/tie_cap_referenceAddTown"
                            android:textColor="@color/material_black"
                            tools:ignore="LabelFor,RtlSymmetry" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_cap_referenceAddTown"
                        style="@style/TextInputStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:hint="@string/sHintTown"
                        android:textColorHint="@color/guanzon_dark_grey"
                        tools:ignore="HardcodedText">

                        <AutoCompleteTextView
                            android:id="@+id/tie_cap_referenceAddTown"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textAutoComplete|textAutoCorrect"
                            android:maxLength="20"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:paddingStart="10dp"
                            android:paddingLeft="10dp"
                            android:imeOptions="actionDone"
                            android:textColor="@color/material_black"
                            tools:ignore="LabelFor,RtlSymmetry" />
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_fragment_others_addReference"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/MaterialButtonAccent"
                    android:fontFamily="@font/roboto_thin"
                    android:textColor="@color/textColor_White"
                    android:text="Add Reference"
                    tools:targetApi="lollipop"
                    android:layout_gravity="center_horizontal"
                    tools:ignore="HardcodedText"
                    android:layout_marginTop="10dp"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerview_references"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"/>

                </androidx.cardview.widget.CardView>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="30dp">

                    <Button
                        android:id="@+id/btn_creditAppPrvs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sbtnPrvs"
                        style="@style/NavigationButton"
                        android:drawableStart="@drawable/ic_nav_left"
                        android:drawableLeft="@drawable/ic_nav_left"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        tools:ignore="RelativeOverlap"  />

                    <Button
                        android:id="@+id/btn_creditAppNext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sbtnNext"
                        style="@style/NavigationButton"
                        android:drawableEnd="@drawable/ic_nav_right"
                        android:drawableRight="@drawable/ic_nav_right"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        tools:ignore="RelativeOverlap" />
                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
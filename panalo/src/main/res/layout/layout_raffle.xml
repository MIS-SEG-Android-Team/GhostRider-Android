<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/panalo_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/panalo_title_banner"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/panalo_megaphone"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/megaphone"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:layout_constraintWidth_percent="0.2"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintTop_toTopOf="@+id/panalo_title"
        app:layout_constraintBottom_toBottomOf="@+id/panalo_title"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/icon_spin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/panalo_wheel_spin"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toBottomOf="@+id/panalo_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.6"/>

    <com.google.android.material.textview.MaterialTextView
        style="@style/HeaderLabelBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Raffle Starting . . ."
        android:textSize="18sp"
        android:textColor="?attr/colorPrimary"
        app:layout_constraintStart_toStartOf="@+id/icon_spin"
        app:layout_constraintEnd_toEndOf="@+id/icon_spin"
        app:layout_constraintTop_toBottomOf="@+id/icon_spin"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/icon_spin">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Raffle Draw Winners"
            android:layout_marginStart="5dp"
            android:layout_marginVertical="10dp"
            android:elevation="20dp"
            android:textColor="@color/white"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
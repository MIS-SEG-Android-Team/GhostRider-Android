<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:fillViewport="true"
android:scrollbars="none"
android:orientation="vertical"
tools:context=".Activity.Activity_CIHistoryInfo">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/GhostRiderMaterialTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_evaluation_history_info"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/material_tool_bar"
            app:popupTheme="@style/GhostRiderMaterialTheme.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:id="@+id/ln_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:padding="10dp">

        <LinearLayout
            android:id="@+id/ln_header_transNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:text="@string/sLblTransNo"
                android:fontFamily="@font/roboto"
                android:textColor="@color/textColor_Black"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/lbl_transNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:fontFamily="@font/roboto"
                android:textColor="@color/textColor_Black"
                android:textSize="15sp"
                android:gravity="end"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="#535353"
            android:layout_marginVertical="5dp"/>

        <LinearLayout
            android:id="@+id/ln_header_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="5dp">

            <ImageView
                android:id="@+id/iv_customer"
                android:layout_width="85dp"
                android:layout_height="94dp"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="12dp">

                <TextView
                    android:id="@+id/lbl_customer_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/textColor_Black"
                    android:textSize="17sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintHorizontal_bias="0"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sLblLoanUnit"
                    android:fontFamily="@font/roboto"
                    android:textColor="@color/textColor_Black"
                    android:textSize="15sp"
                    android:layout_marginTop="5dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/lbl_loan_unit"/>

                <TextView
                    android:id="@+id/lbl_loan_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:textColor="@color/textColor_Black"
                    android:textSize="15sp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/lbl_customer_name"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sLblDownpayment"
                    android:fontFamily="@font/roboto"
                    android:textColor="@color/textColor_Black"
                    android:textSize="15sp"
                    android:layout_marginTop="5dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/lbl_downpayment"/>

                <TextView
                    android:id="@+id/lbl_downpayment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:textColor="@color/textColor_Black"
                    android:textSize="15sp"
                    android:layout_marginTop="1dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/lbl_loan_unit"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sLblTerms"
                    android:fontFamily="@font/roboto"
                    android:textColor="@color/textColor_Black"
                    android:textSize="15sp"
                    android:layout_marginTop="5dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/lbl_terms"/>

                <TextView
                    android:id="@+id/lbl_terms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:textColor="@color/textColor_Black"
                    android:textSize="15sp"
                    android:layout_marginTop="1dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/lbl_downpayment"/>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="#535353"
            android:layout_marginVertical="5dp"/>

        <LinearLayout
            android:id="@+id/ln_header_approval"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="5dp">

            <TextView
                android:id="@+id/lbl_approved"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sLblApproved"
                android:textSize="13sp"
                android:fontFamily="@font/roboto"
                android:layout_marginRight="3dp"
                android:background="@drawable/border_label_success"
                android:textColor="@color/success_green"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/lbl_disapproved"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sLblDisapproved"
                android:textSize="13sp"
                android:fontFamily="@font/roboto"
                android:layout_marginRight="3dp"
                android:background="@drawable/border_label_error"
                android:textColor="@color/error_red"/>

            <TextView
                android:id="@+id/lbl_approval_reason"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reason: No doubt. Richest person in their brgy."
                android:textColor="@color/textColor_Black"
                android:textSize="13sp"
                android:fontFamily="@font/roboto"
                android:gravity="end"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--                RESIDENCE INFORMATION-->
            <LinearLayout
                android:id="@+id/ln_list_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight=".6"
                    android:background="@color/guanzon_digital_orange"/>

                <TextView
                    android:id="@+id/lbl_list_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Residence Information"
                    android:textSize="16sp"
                    android:textColor="@color/material_black"
                    android:fontFamily="@font/roboto_medium"
                    android:layout_marginHorizontal="5dp"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight=".6"
                    android:background="@color/guanzon_digital_orange"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/simpleTableLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"> <!-- stretch the all column of the layout-->

                    <!-- first row of the table layout-->
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                        <!-- first element of the row-->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Landmark : "
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            android:textSize="14sp"
                            android:textColor="@color/textColor_Black"
                            android:gravity="start"
                            android:fontFamily="@font/roboto_medium"/>

                        <TextView
                            android:id="@+id/lbl_landmark"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="Branch"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            android:paddingRight="5dp"
                            android:textSize="14sp"
                            android:textColor="@color/textColor_Black"
                            android:gravity="end"
                            android:fontFamily="@font/roboto_medium"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                        <!-- first element of the row-->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="House Ownership :"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            android:textSize="14sp"
                            android:textColor="@color/textColor_Black"
                            android:gravity="start"
                            android:fontFamily="@font/roboto_medium"/>

                        <TextView
                            android:id="@+id/lbl_ownership"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="Branch"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            android:paddingRight="5dp"
                            android:textSize="14sp"
                            android:textColor="@color/textColor_Black"
                            android:gravity="end"
                            android:fontFamily="@font/roboto_medium"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- first element of the row-->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Households :"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            android:textSize="14sp"
                            android:textColor="@color/textColor_Black"
                            android:gravity="start"
                            android:layout_column="0"
                            android:fontFamily="@font/roboto_medium"/>

                        <TextView
                            android:id="@+id/lbl_households"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="Branch"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            android:textSize="14sp"
                            android:paddingRight="5dp"
                            android:textColor="@color/textColor_Black"
                            android:gravity="end"
                            android:fontFamily="@font/roboto_medium"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                        <!-- first element of the row-->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="House Type :"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            android:textSize="14sp"
                            android:textColor="@color/textColor_Black"
                            android:gravity="start"
                            android:fontFamily="@font/roboto_medium"/>

                        <TextView
                            android:id="@+id/lbl_housetype"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="Branch"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            android:textSize="14sp"
                            android:paddingRight="5dp"
                            android:textColor="@color/textColor_Black"
                            android:gravity="end"
                            android:fontFamily="@font/roboto_medium"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                        <!-- first element of the row-->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="With Safe Garage :"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            android:textSize="14sp"
                            android:textColor="@color/textColor_Black"
                            android:gravity="start"
                            android:fontFamily="@font/roboto_medium"/>

                        <TextView
                            android:id="@+id/lbl_garage"
                            android:layout_width="fill_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/roboto_medium"
                            android:gravity="end"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            android:text="Branch"
                            android:paddingRight="5dp"
                            android:textColor="@color/textColor_Black"
                            android:textSize="14sp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                        <!-- first element of the row-->

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:gravity="start"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            android:textSize="14sp"
                            android:paddingRight="5dp"
                            android:text="Do they have other address or residence :"
                            android:textColor="@color/textColor_Black" />

                        <TextView
                            android:id="@+id/lbl_hasother"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="Branch"
                            android:layout_column="1"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            android:textColor="@color/textColor_Black"
                            android:gravity="end"
                            android:textSize="14sp"
                            android:paddingRight="5dp"
                            android:fontFamily="@font/roboto_medium"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/guanzon_orange" />
                </LinearLayout>
            </LinearLayout>
            <!--                CI DISBURSEMENT -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight=".6"
                    android:background="@color/guanzon_digital_orange"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Disbursement Information"
                    android:textSize="16sp"
                    android:textColor="@color/material_black"
                    android:fontFamily="@font/roboto_medium"
                    android:layout_marginHorizontal="5dp"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight=".6"
                    android:background="@color/guanzon_digital_orange"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>

            <!--Barangay Record Information -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight=".6"
                    android:background="@color/guanzon_digital_orange"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Barangay Record Information"
                    android:textSize="16sp"
                    android:textColor="@color/material_black"
                    android:fontFamily="@font/roboto_medium"
                    android:layout_marginHorizontal="5dp"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight=".6"
                    android:background="@color/guanzon_digital_orange"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>

            <!--                CHARACTER TRAITS -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight=".6"
                    android:background="@color/guanzon_digital_orange"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Character Traits Information"
                    android:textSize="16sp"
                    android:textColor="@color/material_black"
                    android:fontFamily="@font/roboto_medium"
                    android:layout_marginHorizontal="5dp"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight=".6"
                    android:background="@color/guanzon_digital_orange"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDefaultResource">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_samsungknox"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingVertical="15dp"
            android:paddingHorizontal="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:paddingTop="5dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:text="Loan Application History"
                    android:textColor="@color/textColor_White"
                    android:textSize="22sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/roboto_light"
                    android:text="GMC Dagupan - Honda"
                    android:textColor="@color/textColor_White"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_light"
                    android:text="Guanzon Bldg., Perez Blvd., Dagupan City"
                    android:textColor="@color/textColor_White"
                    android:textSize="15sp" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="15dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:padding="3dp"
                android:background="@color/guanzon_orange"/>

            <TextView
                android:id="@+id/lbl_list_applicantName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Garcia, Michael Permison"
                android:textSize="16sp"
                android:textColor="@color/textColor_Black"
                tools:ignore="HardcodedText"
                android:fontFamily="@font/roboto_medium"
                tools:targetApi="jelly_bean"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:text="Date Applied :"
                    android:textSize="16sp"
                    android:textColor="@color/textColor_Black"
                    android:gravity="start"
                    tools:ignore="HardcodedText"
                    android:fontFamily="@font/roboto_regular"
                    tools:targetApi="jelly_bean"/>

                <TextView
                    android:id="@+id/lbl_list_applicationDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="December 12, 2019"
                    android:textColor="@color/textColor_Black"
                    android:gravity="end"
                    tools:ignore="HardcodedText"
                    android:fontFamily="@font/roboto_regular"
                    tools:targetApi="jelly_bean"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:text="Model :"
                    android:textSize="16sp"
                    android:textColor="@color/textColor_Black"
                    android:gravity="start"
                    tools:ignore="HardcodedText"
                    android:fontFamily="@font/roboto_regular"
                    tools:targetApi="jelly_bean"/>

                <TextView
                    android:id="@+id/lbl_modelName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="December 12, 2019"
                    android:textColor="@color/textColor_Black"
                    android:gravity="end"
                    tools:ignore="HardcodedText"
                    android:fontFamily="@font/roboto_regular"
                    tools:targetApi="jelly_bean"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:text="Term :"
                    android:textSize="16sp"
                    android:textColor="@color/textColor_Black"
                    android:gravity="start"
                    tools:ignore="HardcodedText"
                    android:fontFamily="@font/roboto_regular"
                    tools:targetApi="jelly_bean"/>

                <TextView
                    android:id="@+id/lbl_accntTerm"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="December 12, 2019"
                    android:textColor="@color/textColor_Black"
                    android:gravity="end"
                    tools:ignore="HardcodedText"
                    android:fontFamily="@font/roboto_regular"
                    tools:targetApi="jelly_bean"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:text="Mobile # :"
                    android:textSize="16sp"
                    android:textColor="@color/textColor_Black"
                    android:gravity="start"
                    tools:ignore="HardcodedText"
                    android:fontFamily="@font/roboto_regular"
                    tools:targetApi="jelly_bean"/>

                <TextView
                    android:id="@+id/lbl_mobileNo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="December 12, 2019"
                    android:textColor="@color/textColor_Black"
                    android:gravity="end"
                    tools:ignore="HardcodedText"
                    android:fontFamily="@font/roboto_regular"
                    tools:targetApi="jelly_bean"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:padding="3dp"
                android:background="@color/guanzon_orange"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="@color/material_lightgrey"
    app:cardUseCompatPadding="true"
    app:cardMaxElevation="5dp"
    android:background="@color/material_lightgrey"
    app:cardElevation="3dp"
    app:cardPreventCornerOverlap="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/lbl_ci_transNox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GOCAS No. : 000000000000"
                android:textColor="@color/textColor_Black"
                android:fontFamily="@font/roboto"
                android:textSize="16sp"
                android:layout_weight="2"/>

            <TextView
                android:id="@+id/lbl_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/check_green"
                android:textSize="16sp"
                android:text="Sent"
                android:visibility="gone"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:padding="3dp"
            android:layout_marginVertical="3dp"
            android:background="@color/textColor_Black"/>

        <TextView
            android:id="@+id/lbl_ci_applicantName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Garcia, Michael Permison"
            android:textColor="@color/textColor_Black"
            android:fontFamily="@font/roboto_bold"
            android:textSize="16sp"
            android:layout_marginVertical="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginVertical="1dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Date Applied : "
                android:textSize="14sp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/material_black"/>

            <TextView
                android:id="@+id/lbl_ci_applicationDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Transaction No. : "
                android:gravity="end"
                android:textSize="14sp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/material_black"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginVertical="1dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Term : "
                android:textSize="14sp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/material_black"/>

            <TextView
                android:id="@+id/lbl_ci_accountTerm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Transaction No. : "
                android:gravity="end"
                android:textSize="14sp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/material_black"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginVertical="1dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Mobile No. : "
                android:textSize="14sp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/material_black"/>

            <TextView
                android:id="@+id/lbl_ci_mobileNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Transaction No. : "
                android:gravity="end"
                android:textSize="14sp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/material_black"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginVertical="1dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Model:"
                android:textSize="14sp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/material_black"/>

            <TextView
                android:id="@+id/lbl_ci_modelName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Transaction No. : "
                android:gravity="end"
                android:textSize="14sp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/material_black"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginVertical="1dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Downpayment : "
                android:textSize="14sp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/material_black"/>

            <TextView
                android:id="@+id/lbl_ci_downPayment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Transaction No. : "
                android:gravity="end"
                android:textSize="14sp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/material_black"/>

        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>
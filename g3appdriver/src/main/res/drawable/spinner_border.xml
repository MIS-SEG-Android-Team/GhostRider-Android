<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">
    <item><layer-list>
        <item>
            <shape>
                <solid
                    android:color="?android:background"
                    tools:ignore="NewApi">
                </solid>

                <corners android:radius="10dp" />

                <padding
                    android:left="10dp"
                    android:right="10dp" />
                <stroke
                    android:width="1dp"
                    android:color="@color/hint_color"
                    tools:ignore="NewApi"/>
            </shape>
        </item>
        <item >
            <bitmap android:gravity="center|right"
                android:src="@drawable/drop_down_arrow"
                android:tint="@color/hint_color"/>
        </item>
    </layer-list></item>
</selector>
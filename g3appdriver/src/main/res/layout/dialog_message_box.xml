<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="25dp"
    app:cardUseCompatPadding="true"
    app:cardPreventCornerOverlap="true"
    android:layout_marginHorizontal="60dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/background_dialog">

        <TextView
            android:id="@+id/lbl_dialogTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textColor="@color/guanzon_dark_grey"
            android:textSize="21sp"
            android:gravity="center"
            android:paddingTop="20dp"
            android:fontFamily="@font/roboto_bold"/>

        <TextView
            android:id="@+id/lbl_dialogMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Message"
            android:textColor="@color/guanzon_dark_grey"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:gravity="center"
            android:fontFamily="@font/roboto"
            android:paddingTop="25dp"
            android:paddingBottom="30dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:background="@color/guanzon_orange"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_dialogPositive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="YES"
                app:rippleColor="@color/guanzon_digital_orange"
                android:textColor="@color/guanzon_dark_grey"
                android:fontFamily="@font/roboto_medium"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:visibility="gone"/>

            <View
                android:id="@+id/view_midBorder"
                android:layout_width="0.7dp"
                android:layout_height="match_parent"
                android:background="@color/guanzon_orange"
                android:visibility="gone"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_dialogNegative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="NO"
                app:rippleColor="@color/guanzon_digital_orange"
                android:textColor="@color/guanzon_dark_grey"
                android:fontFamily="@font/roboto_medium"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:visibility="gone"/>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
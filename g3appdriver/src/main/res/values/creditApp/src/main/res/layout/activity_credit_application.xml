<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/GhostRiderMaterialTheme"
    tools:context=".Activity.Activity_CreditApplication">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_application"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"/>

    <org.rmj.guanzongroup.onlinecreditapplication.Etc.NonSwipeableViewPager
        android:id="@+id/viewpager_creditApp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
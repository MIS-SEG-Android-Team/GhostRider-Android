<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.google.android.material.textview.MaterialTextView
        style="@style/PrimaryHeaderStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:text="New Features"
        android:textSize="20sp" />

    <com.google.android.material.textview.MaterialTextView
        style="@style/PrimaryHeaderStyle"
        android:textColor="?attr/colorAccent"
        android:id="@+id/lblLogHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Employee Loan"
        android:textSize="16sp"
        android:paddingTop="5dp"
        android:paddingLeft="10dp" />

    <com.google.android.material.textview.MaterialTextView
        style="@style/PrimaryHeaderStyle"
        android:id="@+id/lblLogDescr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="A feature that allows user to apply loan from company products among all branches."
        android:textStyle="bold"
        android:paddingTop="5dp"
        android:paddingLeft="10dp"
        android:textSize="13sp"/>

    <com.google.android.material.textview.MaterialTextView
        style="@style/PrimaryHeaderStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:paddingTop="10dp"
        android:textSize="20sp"
        android:text="Fixed Concerns"/>

    <com.google.android.material.textview.MaterialTextView
        style="@style/PrimaryHeaderStyle"
        android:id="@+id/lblLogOthers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="•Improved ui design, adapting to light and dark mode.
                      \n•Option to change employee position for GM only."
        android:textSize="16sp"
        android:paddingTop="5dp"
        android:paddingLeft="10dp"/>

</LinearLayout>
    <style name="TransparentToolbar" parent="Theme.GuanzonCircle.NoActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="colorPrimary">@android:color/transparent</item>
    </style>

    <style name="ToolbarTitle">
        <item name="android:typeface">serif</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/material_white</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Theme.GuanzonCircle.TextInputContainer" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_margin">3dp</item>
        <item name="android:padding">5dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
    </style>

    <style name="Theme.GuanzonCircle.TextInput">
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="Theme.GuanzonCircle.TextInputAutoComplete">
        <item name="android:textColor">@color/material_white</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:padding">15dp</item>
        <item name="android:inputType">textAutoComplete</item>
    </style>

    <style name="Theme.GuanzonCircle.HeaderLabel">
        <item name="android:textColor">@color/material_white</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:padding">15dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>

    </style>

    <style name="PopupAnimation">
        <item name="android:windowEnterAnimation">@anim/anim_pop_in</item>
        <item name="android:windowExitAnimation">@anim/anim_pop_out</item>
    </style>

    <style name="TextInputStyleHeaders" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_margin">2dp</item>
        <item name="boxStrokeWidth">0.8dp</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>

    </style>

    <style name="AutoCompleteTextStyle" parent="Widget.MaterialComponents.AutoCompleteTextView.FilledBox">
        <item name="android:spinnerMode">dialog</item>
    </style>

    <style name="Regular_Label">
        <item name="android:textColor">@color/material_black</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">5dp</item>
    </style>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/GhostRiderMaterialTheme"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_applyLeave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sBtnLeaveApp"
        style="@style/MaterialButtonAccent"
        app:icon="@drawable/ic_application_leave"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_applyOB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sBtnBusTrpApp"
        style="@style/MaterialButtonAccent"
        app:icon="@drawable/ic_application_business_trip"/>

</LinearLayout>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.home.Fragment_Associate_Dashboard"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="90dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="30dp">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardview_dashboard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="8dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingHorizontal="10dp"
                        android:layout_marginTop="10dp"
                        android:gravity="end">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".7"
                                android:layout_marginBottom="3dp"
                                android:textSize="16sp"
                                android:fontFamily="@font/roboto_medium"
                                android:gravity="end"/>

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/lbl_userFullName"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginBottom="3dp"
                                android:textSize="16sp"
                                android:fontFamily="@font/roboto_medium"
                                android:gravity="end"/>

                        </LinearLayout>

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/lbl_userEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="3dp"
                            android:fontFamily="@font/roboto_regular"
                            android:gravity="end"/>

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/lbl_userLevel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:fontFamily="@font/roboto_regular"
                            android:gravity="end"/>

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/lbl_userDepartment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:fontFamily="@font/roboto_regular"
                            android:gravity="end"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="10dp"/>

                        <ScrollView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scrollbars="none">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <com.google.android.material.textview.MaterialTextView
                                    android:id="@+id/lbl_userBranch"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="5dp"
                                    android:fontFamily="@font/roboto_regular"
                                    android:gravity="start"/>

                                <com.google.android.material.textview.MaterialTextView
                                    android:id="@+id/lbl_userAddress"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="5dp"
                                    android:fontFamily="@font/roboto_regular"
                                    android:gravity="start"/>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"/>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <com.google.android.material.button.MaterialButton
                                        android:id="@+id/btn_settings"
                                        style="@style/Widget.AppCompat.Button.Borderless"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_vertical"
                                        android:text="Settings"
                                        app:icon="@drawable/ic_dashboard_settings"/>

                                    <com.google.android.material.textview.MaterialTextView
                                        android:id="@+id/lbl_badge_settings"
                                        android:layout_width="24dp"
                                        android:layout_height="24dp"
                                        android:layout_alignParentEnd="true"
                                        android:layout_alignParentRight="true"
                                        android:layout_centerVertical="true"
                                        android:background="@drawable/bg_badge_red"
                                        android:fontFamily="@font/roboto_black"
                                        android:gravity="center"
                                        android:text="!"
                                        android:visibility="gone" />

                                </RelativeLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"/>

                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/btn_logout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Logout"
                                    android:gravity="center_vertical"
                                    app:icon="@drawable/ic_dashboard_logout"
                                    style="@style/Widget.AppCompat.Button.Borderless"/>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"/>

                                <LinearLayout
                                    android:id="@+id/ln_devMode"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical"
                                    android:padding="10dp"
                                    app:layout_constraintTop_toBottomOf="@+id/lblTest1">

                                    <com.google.android.material.textview.MaterialTextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/roboto_medium"
                                        android:textSize="15sp"
                                        android:text="Test Mode"/>

                                    <com.google.android.material.switchmaterial.SwitchMaterial
                                        android:id="@+id/sm_dcpTest"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight=".2"
                                        android:gravity="center"/>

                                </LinearLayout>

                                <com.google.android.material.textview.MaterialTextView
                                    android:id="@+id/lbl_serverStatus"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="3dp"
                                    android:fontFamily="@font/roboto_black"
                                    android:text="Connection : Live"
                                    android:layout_marginTop="10dp"/>

                                <com.google.android.material.textview.MaterialTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="3dp"
                                    android:fontFamily="@font/roboto_regular"
                                    android:text="@string/lsMainOffice"
                                    android:layout_marginTop="10dp"/>

                                <com.google.android.material.textview.MaterialTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="3dp"
                                    android:fontFamily="@font/roboto_regular"
                                    android:text="@string/lsMainAddress"/>

                                <com.google.android.material.textview.MaterialTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="3dp"
                                    android:fontFamily="@font/roboto_regular"
                                    android:text="@string/lsMainContact"/>

                                <com.google.android.material.textview.MaterialTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="5dp"
                                    android:fontFamily="@font/roboto_regular"
                                    android:text="@string/lsMainWebsite"/>

                                <LinearLayout
                                    android:id="@+id/footer_dashboard"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    android:layout_marginTop="30dp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent">

                                    <com.google.android.material.textview.MaterialTextView
                                        android:id="@+id/tvCopyright"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp"
                                        android:layout_marginBottom="3dp"
                                        android:fontFamily="@font/roboto_light"
                                        android:text="@string/sLblCopyright"
                                        android:textSize="11sp"
                                        tools:ignore="SmallSp" />

                                    <com.google.android.material.textview.MaterialTextView
                                        android:id="@+id/lbl_versionInfo"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="5dp"
                                        android:fontFamily="@font/roboto_light"
                                        android:text="@string/lblBuildVersion"
                                        android:textSize="11sp"
                                        tools:ignore="SmallSp" />

                                </LinearLayout>

                            </LinearLayout>

                        </ScrollView>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </RelativeLayout>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardMaxElevation="20dp"
                app:cardElevation="15dp"
                app:cardPreventCornerOverlap="true"
                app:cardCornerRadius="90dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp">

                <ImageView
                    android:id="@+id/img_userLogo"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:padding="10dp"
                    android:src="@drawable/ic_ghostrider_logo_day" />

            </com.google.android.material.card.MaterialCardView>

        </RelativeLayout>

    </LinearLayout>



</ScrollView>
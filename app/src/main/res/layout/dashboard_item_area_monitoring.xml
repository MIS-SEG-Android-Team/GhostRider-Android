<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp">

        <TextView
            android:id="@+id/lbl_listItemPercentage"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:gravity="center"
            android:text="50%"/>


        <org.rmj.guanzongroup.ghostrider.epacss.ui.ProgressBar.VerticalProgressBar
            android:id="@+id/progress_monitor"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:indeterminateOnly="false"
            android:minWidth="10dp"
            android:maxHeight="15dp"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:progress="50"
            android:layout_below="@+id/lbl_listItemPercentage"
            android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/lbl_AreaBranchItem"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="R1-A"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"/>

    </LinearLayout>
</LinearLayout>
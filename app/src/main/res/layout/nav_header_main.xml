<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:gravity="bottom"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <ImageView
        android:id="@+id/imgAppIcon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/ic_guanzon_logo"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toTopOf="@+id/lbl_deptNme"
        app:layout_constraintWidth_percent=".35"
        app:layout_constraintHeight_percent=".35"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lblAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_bold"
        android:layout_marginTop="@dimen/nav_header_vertical_spacing"
        android:text="@string/nav_header_title"
        android:textSize="15sp"
        android:textColor="?attr/colorOnPrimary"
        app:layout_constraintEnd_toEndOf="@+id/imgAppIcon"
        app:layout_constraintStart_toStartOf="@+id/imgAppIcon"
        app:layout_constraintTop_toBottomOf="@+id/imgAppIcon" />

    <ImageView
        android:id="@+id/img_deptLogo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_mis"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/lbl_deptNme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_medium"
        android:text="Management Information System"
        android:textColor="?attr/colorOnPrimary"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/img_deptLogo"
        app:layout_constraintStart_toEndOf="@+id/img_deptLogo"
        app:layout_constraintTop_toTopOf="@+id/img_deptLogo" />

</androidx.constraintlayout.widget.ConstraintLayout>
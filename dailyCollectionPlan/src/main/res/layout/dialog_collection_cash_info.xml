<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    app:cardPreventCornerOverlap="true"
    app:cardCornerRadius="25dp"
    app:cardMaxElevation="5dp"
    app:cardElevation="3dp"
    android:theme="@style/GhostRiderMaterialTheme">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/background_dialog">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remit Collection"
            android:textSize="20sp"
            android:textColor="@color/textColor_Black"
            android:fontFamily="@font/roboto_bold"
            android:layout_marginTop="15dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/guanzon_orange"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="5dp"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total Collection :"
                    android:textSize="16sp"
                    android:padding="5dp"
                    android:textColor="@color/textColor_Black"
                    android:fontFamily="@font/roboto_medium"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:id="@+id/lbl_collectedCash"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cash : "
                    android:padding="10dp"
                    android:textColor="@color/textColor_Black"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:id="@+id/lbl_collectedCheck"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Check : "
                    android:padding="10dp"
                    android:textColor="@color/textColor_Black"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_marginTop="5dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/guanzon_orange"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total Remitted Collection :"
                    android:textSize="16sp"
                    android:padding="5dp"
                    android:textColor="@color/textColor_Black"
                    android:fontFamily="@font/roboto_medium"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Remitted Collection : "
                    android:padding="5dp"
                    android:textColor="@color/textColor_Black"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:id="@+id/lbl_remittanceBranch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Branch : "
                    android:paddingLeft="20dp"
                    android:paddingVertical="3dp"
                    android:textColor="@color/textColor_Black"
                    android:fontFamily="@font/roboto_regular" />

                <TextView
                    android:id="@+id/lbl_remittanceBank"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bank : "
                    android:paddingLeft="20dp"
                    android:paddingVertical="3dp"
                    android:textColor="@color/textColor_Black"
                    android:fontFamily="@font/roboto_regular" />

                <TextView
                    android:id="@+id/lbl_remittanceOthers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Others : "
                    android:paddingLeft="20dp"
                    android:paddingVertical="3dp"
                    android:textColor="@color/textColor_Black"
                    android:fontFamily="@font/roboto_regular" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="On-Hand : "
                    android:padding="5dp"
                    android:textColor="@color/textColor_Black"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:id="@+id/lbl_remittanceCash"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:paddingVertical="3dp"
                    android:paddingLeft="20dp"
                    android:text="Cash : "
                    android:textColor="@color/textColor_Black" />

                <TextView
                    android:id="@+id/lbl_remittanceCheck"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Check : "
                    android:paddingLeft="20dp"
                    android:paddingVertical="3dp"
                    android:textColor="@color/textColor_Black"
                    android:fontFamily="@font/roboto_regular" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/guanzon_orange"
                    android:layout_marginTop="10dp"/>

                <Button
                    android:id="@+id/btn_confirm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Okay"
                    app:rippleColor="@color/guanzon_orange"
                    android:textColor="@color/material_black"
                    style="@style/Widget.AppCompat.Button.Borderless"/>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</androidx.cardview.widget.CardView>
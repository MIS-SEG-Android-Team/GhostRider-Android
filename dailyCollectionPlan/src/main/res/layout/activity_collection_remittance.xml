<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.Activity_CollectionRemittance">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar_collectionRemit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/GhostRiderMaterialTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_collectionRemit"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/material_tool_bar"
            app:popupTheme="@style/GhostRiderMaterialTheme.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:id="@+id/linear_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_samsungknox"
        android:gravity="center_horizontal"
        android:paddingHorizontal="15dp"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:text="Total Collection Info"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/lbl_headerBranch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:fontFamily="@font/roboto_light"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/lbl_headerAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:fontFamily="@font/roboto_light"
                android:textColor="@color/black"/>

        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="3dp"
                app:cardBackgroundColor="@color/white"
                app:cardUseCompatPadding="true"
                app:cardMaxElevation="5dp"
                app:cardPreventCornerOverlap="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:paddingTop="10dp"
                    android:paddingHorizontal="5dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Total Collection :"
                        android:textSize="16sp"
                        android:textColor="@color/textColor_Black"
                        android:fontFamily="@font/roboto_medium"
                        android:layout_marginTop="5dp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/guanzon_orange"
                        android:layout_marginTop="10dp"/>

                    <TextView
                        android:id="@+id/lbl_collectedCash"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Cash : "
                        android:padding="10dp"
                        android:textColor="@color/textColor_Black"
                        android:fontFamily="@font/roboto_regular"
                        android:layout_marginTop="5dp"/>

                    <TextView
                        android:id="@+id/lbl_collectedCheck"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Check : "
                        android:padding="10dp"
                        android:textColor="@color/textColor_Black"
                        android:fontFamily="@font/roboto_regular"
                        android:layout_marginTop="5dp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="3dp"
                app:cardBackgroundColor="@color/white"
                app:cardUseCompatPadding="true"
                app:cardMaxElevation="5dp"
                app:cardPreventCornerOverlap="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:paddingVertical="10dp"
                    android:paddingHorizontal="5dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Total Remitted Collection :"
                        android:textSize="16sp"
                        android:textColor="@color/textColor_Black"
                        android:fontFamily="@font/roboto_medium"
                        android:layout_marginTop="5dp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/guanzon_orange"
                        android:layout_marginTop="10dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Remitted Collection : "
                        android:padding="5dp"
                        android:textColor="@color/textColor_Black"
                        android:fontFamily="@font/roboto_regular"
                        android:layout_marginTop="5dp"/>

                    <TextView
                        android:id="@+id/lbl_remittanceBranch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Branch : "
                        android:paddingLeft="20dp"
                        android:paddingVertical="3dp"
                        android:textColor="@color/textColor_Black"
                        android:fontFamily="@font/roboto_regular" />

                    <TextView
                        android:id="@+id/lbl_remittanceBank"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Bank : "
                        android:paddingLeft="20dp"
                        android:paddingVertical="3dp"
                        android:textColor="@color/textColor_Black"
                        android:fontFamily="@font/roboto_regular" />

                    <TextView
                        android:id="@+id/lbl_remittanceOthers"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Others : "
                        android:paddingLeft="20dp"
                        android:paddingVertical="3dp"
                        android:textColor="@color/textColor_Black"
                        android:fontFamily="@font/roboto_regular" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="On-Hand : "
                        android:padding="5dp"
                        android:textColor="@color/textColor_Black"
                        android:fontFamily="@font/roboto_regular"
                        android:layout_marginTop="5dp"/>

                    <TextView
                        android:id="@+id/lbl_remittanceCash"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:paddingVertical="3dp"
                        android:paddingLeft="20dp"
                        android:text="Cash : "
                        android:textColor="@color/textColor_Black" />

                    <TextView
                        android:id="@+id/lbl_remittanceCheck"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Check : "
                        android:paddingLeft="20dp"
                        android:paddingVertical="3dp"
                        android:textColor="@color/textColor_Black"
                        android:fontFamily="@font/roboto_regular" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/btn_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remit"
                app:rippleColor="@color/guanzon_orange"
                android:textColor="@color/material_black"
                style="@style/MaterialButtonAccent"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
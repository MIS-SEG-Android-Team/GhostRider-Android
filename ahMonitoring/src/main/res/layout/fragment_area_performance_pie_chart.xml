<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_gradient_light"
    tools:context="Fragment.Fragment_AreaPerformance_PieChart">

    <RelativeLayout
        android:id="@+id/cl_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/img_bg_guanzon_orange"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/bg_dashboard" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_bg_guanzon_orange"
            android:layout_marginTop="-140dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvArea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center"
                    android:text="UEMI Brooke's Point - YAMAHA"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textSize="20sp"
                    android:layout_marginBottom="10dp" />

                <include layout="@layout/custom_tab_ah" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="10dp"
                    app:cardBackgroundColor="@color/material_lightgrey"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="5dp"
                    app:cardMaxElevation="10dp">

                    <androidx.core.widget.NestedScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Performance Period"
                                android:textSize="17sp"
                                android:fontFamily="@font/roboto_bold"
                                android:gravity="center"
                                android:layout_marginTop="15dp"/>

                            <RadioGroup
                                android:id="@+id/rg_period"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center"
                                android:layout_marginTop="10dp">

                                <RadioButton
                                    android:id="@+id/rb_month"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Month"
                                    android:checked="true"
                                    android:layout_marginHorizontal="10dp"/>

                                <RadioButton
                                    android:id="@+id/rb_year"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Year"
                                    android:layout_marginHorizontal="10dp"/>

                            </RadioGroup>

                            <com.github.mikephil.charting.charts.PieChart
                                android:id="@+id/pie_chart_month"
                                android:layout_width="match_parent"
                                android:layout_height="230dp"
                                android:layout_marginVertical="20dp"
                                android:padding="5dp"
                                android:layout_gravity="center"/>

                            <com.github.mikephil.charting.charts.PieChart
                                android:id="@+id/pie_chart_year"
                                android:layout_width="match_parent"
                                android:layout_height="230dp"
                                android:layout_marginVertical="20dp"
                                android:padding="5dp"
                                android:layout_gravity="center"
                                android:visibility="gone"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center"
                                android:layout_marginVertical="10dp">

                                <View
                                    android:layout_width="10dp"
                                    android:layout_height="10dp"
                                    android:background="#454545"
                                    android:layout_marginTop="1dp"
                                    android:layout_marginRight="5dp"/>

                                <TextView
                                    android:id="@+id/lgd_goal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Goal"
                                    android:layout_marginRight="10dp"/>

                                <View
                                    android:layout_width="10dp"
                                    android:layout_height="10dp"
                                    android:background="#FF8200"
                                    android:layout_marginTop="1dp"
                                    android:layout_marginRight="5dp"/>

                                <TextView
                                    android:id="@+id/lgd_actual"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Actual"
                                    android:layout_marginRight="10dp"/>

                                <View
                                    android:layout_width="10dp"
                                    android:layout_height="10dp"
                                    android:background="#114F87"
                                    android:layout_marginTop="1dp"
                                    android:layout_marginRight="5dp"/>

                                <TextView
                                    android:id="@+id/lgd_excess"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Excess"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:layout_marginVertical="25dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Branch Performances"
                                    android:textSize="17sp"
                                    android:fontFamily="@font/roboto_bold"/>
                                <TextView
                                    android:id="@+id/lbl_date"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="15sp"
                                    android:fontFamily="@font/roboto"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/guanzon_orange"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:padding="5dp">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/roboto_medium"
                                    android:gravity="center"
                                    android:maxLines="2"
                                    android:text="Branch" />

                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="match_parent"
                                    android:background="@color/color_dadada" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/roboto_medium"
                                    android:gravity="center"
                                    android:text="Goal" />

                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="match_parent"
                                    android:background="@color/color_dadada" />

                                <TextView
                                    android:id="@+id/lbl_list_actual"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/roboto_medium"
                                    android:gravity="center"
                                    android:text="Actual"/>
                            </LinearLayout>


                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/recyclerview_area_performance"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:clipToPadding="false"
                                android:scrollbars="none"
                                android:padding="5dp"
                                android:orientation="vertical" />

                        </LinearLayout>

                    </androidx.core.widget.NestedScrollView>

                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_area_performance"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:titleTextColor="@color/material_white"/>

</androidx.constraintlayout.widget.ConstraintLayout>
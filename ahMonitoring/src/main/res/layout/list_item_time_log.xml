<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingHorizontal="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/lbl_list_logDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/material_black"
            android:fontFamily="@font/roboto_medium"
            android:layout_weight=".8"/>

        <TextView
            android:id="@+id/lbl_list_logTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/material_black"
            android:fontFamily="@font/roboto_medium"
            android:layout_weight=".8"/>


        <TextView
            android:id="@+id/lbl_list_logStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Uploaded"
            android:textColor="@color/material_black"
            android:fontFamily="@font/roboto_medium"
            android:gravity="end"
            android:layout_weight=".7"
            android:layout_marginRight="5dp"/>

        <ImageButton
            android:id="@+id/btn_list_logImagePreview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_image_preview"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:adjustViewBounds="true"
            android:layout_weight=".25"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="@color/guanzon_orange"/>

</LinearLayout>
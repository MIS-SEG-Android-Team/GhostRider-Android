<androidx.cardview.widget.CardView
    android:id="@+id/cardview_branchOpening"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/branch_opening_late"
    app:cardCornerRadius="5dp"
    android:layout_margin="3dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:gravity="center">

        <TextView
            android:id="@+id/lbl_list_branchName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/textColor_Black"
            android:text="GMC Dagupan - HONDA"
            android:maxLines="2"/>

        <TextView
            android:id="@+id/lbl_list_openingTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".4"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/textColor_Black"
            android:gravity="center"
            android:text="8:00 AM"/>

        <TextView
            android:id="@+id/lbl_list_timeOpened"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".4"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/textColor_Black"
            android:gravity="end"
            android:text="8:00 AM"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>
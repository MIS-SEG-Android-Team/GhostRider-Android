<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_light"
    android:theme="@style/GhostRiderMaterialTheme.NoActionBar"
    tools:context=".Activity.Activity_CashCountLogDetails"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/GhostRiderMaterialTheme.AppBarOverlay">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/material_tool_bar"
            app:popupTheme="@style/GhostRiderMaterialTheme.PopupOverlay" />
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_samsungknox"
            android:gravity="center_horizontal"
            android:paddingHorizontal="19dp"
            android:paddingVertical="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/lbl_branch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_bold"
                        android:textSize="18sp"
                        android:textColor="@color/textColor_White"/>

                    <TextView
                        android:id="@+id/lbl_grand_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="24sp"
                        android:fontFamily="@font/roboto"
                        android:textColor="@color/textColor_White"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="15dp"/>

                </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="3dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Entry Date:"
                    android:textSize="15sp"
                    android:fontFamily="@font/roboto"
                    android:textColor="@color/textColor_White"/>

                <TextView
                    android:id="@+id/lbl_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="No.:"
                    android:textSize="15sp"
                    android:fontFamily="@font/roboto"
                    android:textColor="@color/textColor_White"
                    android:gravity="right"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="3dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Transaction No.: "
                    android:textSize="15sp"
                    android:fontFamily="@font/roboto"
                    android:textColor="@color/textColor_White"/>

                <TextView
                    android:id="@+id/lbl_transNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="No.:"
                    android:textSize="15sp"
                    android:fontFamily="@font/roboto"
                    android:textColor="@color/textColor_White"
                    android:gravity="right"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="3dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Total Petty Cash: "
                    android:textSize="15sp"
                    android:fontFamily="@font/roboto"
                    android:textColor="@color/textColor_White"/>

                <TextView
                    android:id="@+id/lbl_total_pettyCash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="No.:"
                    android:textSize="15sp"
                    android:fontFamily="@font/roboto"
                    android:textColor="@color/textColor_White"
                    android:gravity="right"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="3dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Official Receipt No.:"
                    android:textSize="15sp"
                    android:fontFamily="@font/roboto"
                    android:textColor="@color/textColor_White"/>

                <TextView
                    android:id="@+id/lbl_orNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="No.:"
                    android:textSize="15sp"
                    android:fontFamily="@font/roboto"
                    android:textColor="@color/textColor_White"
                    android:gravity="right"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="3dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Sales Invoice No.:"
                    android:textSize="15sp"
                    android:fontFamily="@font/roboto"
                    android:textColor="@color/textColor_White"/>

                <TextView
                    android:id="@+id/lbl_siNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="No.:"
                    android:textSize="15sp"
                    android:fontFamily="@font/roboto"
                    android:textColor="@color/textColor_White"
                    android:gravity="right"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="3dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Provisional Receipt No.:"
                    android:textSize="15sp"
                    android:fontFamily="@font/roboto"
                    android:textColor="@color/textColor_White"/>

                <TextView
                    android:id="@+id/lbl_prNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="No.:"
                    android:textSize="15sp"
                    android:fontFamily="@font/roboto"
                    android:textColor="@color/textColor_White"
                    android:gravity="right"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="3dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Collection Receipt No.:"
                    android:textSize="15sp"
                    android:fontFamily="@font/roboto"
                    android:textColor="@color/textColor_White"/>

                <TextView
                    android:id="@+id/lbl_crNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="No.:"
                    android:textSize="15sp"
                    android:fontFamily="@font/roboto"
                    android:textColor="@color/textColor_White"
                    android:gravity="right"/>

            </LinearLayout>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

</LinearLayout>
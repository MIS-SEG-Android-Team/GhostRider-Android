<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardUseCompatPadding="true"
    android:background="#e2e2e2"
    app:cardCornerRadius="10dp"
    app:cardPreventCornerOverlap="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/lbl_list_ccTransNox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="14sp"
                android:fontFamily="@font/roboto_bold"/>

            <TextView
                android:id="@+id/lbl_list_ccSentStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="end"
                android:fontFamily="@font/roboto_bold"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="5dp"
            android:background="@color/guanzon_orange"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="5dp">

            <TextView
                android:id="@+id/lbl_list_ccBranch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="GMC Dagupan"
                android:fontFamily="@font/roboto_bold"
                android:drawablePadding="5dp"
                android:textSize="16sp"
                android:gravity="center_vertical"
                app:drawableStartCompat="@drawable/ic_settings_account"
                app:drawableLeftCompat="@drawable/ic_settings_account" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="5dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:text="Date Entry :"
                android:textSize="14sp"
                android:gravity="start"
                tools:ignore="HardcodedText"
                android:fontFamily="@font/roboto"
                tools:targetApi="jelly_bean"/>

            <TextView
                android:id="@+id/lbl_list_ccEntryDte"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="14sp"
                android:text="December 12, 2019"
                android:gravity="end"
                tools:ignore="HardcodedText"
                android:fontFamily="@font/roboto"
                tools:targetApi="jelly_bean"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="5dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:text="Total Entry"
                android:textSize="14sp"
                android:gravity="start"
                tools:ignore="HardcodedText"
                android:fontFamily="@font/roboto"
                tools:targetApi="jelly_bean"/>

            <TextView
                android:id="@+id/lbl_list_ccTotalEntry"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/roboto"
                android:gravity="end"
                android:text="25,000"
                android:textSize="14sp"
                tools:ignore="HardcodedText"
                tools:targetApi="jelly_bean" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Adapter.Adapter_Top_Performing">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:layout_marginStart="40dp"
            app:cardCornerRadius="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="86dp"
                tools:layout_editor_absoluteX="-180dp"
                tools:layout_editor_absoluteY="-16dp">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/lbl_top_branches"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="35dp"
                    android:layout_marginTop="15dp"
                    android:text="GMC DAGUPAN - HONDA"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/lblmcSales"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="35dp"
                    android:layout_marginTop="12dp"
                    android:text="MC Sales"
                    android:textSize="10sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/lbl_top_branches" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/lblmcSalesgoal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="35dp"
                    android:text="101/150"
                    android:textSize="10sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/lblmcSales" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/lblspSales"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="70dp"
                    android:layout_marginTop="12dp"
                    android:text="SP Sales"
                    android:textSize="10sp"
                    app:layout_constraintStart_toEndOf="@+id/lblmcSales"
                    app:layout_constraintTop_toBottomOf="@+id/lbl_top_branches" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/lblspSalesgoal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="101/150"
                    android:textSize="10sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/lblspSales"
                    app:layout_constraintTop_toBottomOf="@+id/lblspSales" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/lbljobOrder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="70dp"
                    android:layout_marginTop="12dp"
                    android:text="Job Order"
                    android:textSize="10sp"
                    app:layout_constraintStart_toEndOf="@+id/lblspSales"
                    app:layout_constraintTop_toBottomOf="@+id/lbl_top_branches" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/lblJOgoal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="101/150"
                    android:textSize="10sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/lbljobOrder"
                    app:layout_constraintTop_toBottomOf="@+id/lbljobOrder" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="90dp"
        app:cardElevation="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:src="@drawable/guanzo_small_logo" />
    </com.google.android.material.card.MaterialCardView>



</androidx.constraintlayout.widget.ConstraintLayout>
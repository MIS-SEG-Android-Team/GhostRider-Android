<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/mcb_barcodecb"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/mtv_barcode"
        app:layout_constraintBottom_toBottomOf="@+id/mtv_barcode"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/mtv_barcode"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="No Barcode"
        android:textSize="15sp"
        android:textStyle="bold"
        android:letterSpacing="0.2"
        android:paddingHorizontal="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/mcb_barcodecb"
        app:layout_constraintWidth_percent="0.8"/>

    <ImageButton
        android:id="@+id/btn_delete"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/baseline_delete_red"
        app:layout_constraintStart_toEndOf="@+id/mtv_barcode"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/mcb_barcodecb"
        app:layout_constraintBottom_toBottomOf="@+id/mcb_barcodecb"/>

</androidx.constraintlayout.widget.ConstraintLayout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/layoutCiValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
                <TextView
                    android:id="@+id/ciTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="Title :"
                    android:textColor="@color/textColor_Black"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="start|center_vertical"
                    />
                <TextView
                    android:id="@+id/lbltitleVal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="Title :"
                    android:textColor="@color/textColor_Black"
                    android:padding="5dp"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="start|center_vertical"
                    />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.5"
                android:gravity="start|center_vertical"
                android:singleLine="false"
                android:text="Findings :"
                android:textColor="@color/textColor_Black"
                android:fontFamily="@font/roboto_regular"/>
            <RadioGroup
                android:id="@+id/rg_ci_ciFindingsValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".36"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_ci_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Incorrect"
                    android:layout_weight="1"
                    tools:targetApi="jelly_bean"
                    android:buttonTint="@color/guanzon_digital_orange" />

                <RadioButton
                    android:id="@+id/rb_ci_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Correct"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_regular"
                    tools:targetApi="jelly_bean"
                    android:buttonTint="@color/guanzon_digital_orange"/>
            </RadioGroup>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="5dp"
            android:paddingBottom="3dp"
            android:background="@color/guanzon_orange"/>
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/GhostRiderMaterialTheme"
    android:orientation="vertical">
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/lbl_evalField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_regular"
        android:text="Sample"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/lbl_evalTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_regular"
        android:text="Sample"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/lbl_evalLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_regular"
        android:text="Sample"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"/>

    <RadioGroup
        android:id="@+id/rg_evaluator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingBottom="8dp">

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/rb_correct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Correct"
            android:layout_weight="1"/>

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/rb_incorrect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Incorrect"
            android:layout_weight="1"/>
    </RadioGroup>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginVertical="10dp">

<!--        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/item_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:paddingHorizontal="10dp"
            android:layout_gravity="center"/> -->

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/item_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textAlignment="center" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:background="@drawable/oval_rating_button_background">

        <LinearLayout
            android:id="@+id/layout_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="left">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/pass_icon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/emoji_laugh_svgrepo_com"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/pass_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pass"
                android:paddingHorizontal="50dp"
                android:background="@color/zxing_transparent"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_fail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/fail_icon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/emoji_sad_svgrepo_com"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/fail_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fail"
                android:paddingHorizontal="50dp"
                android:background="@color/zxing_transparent"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="10dp"
        android:orientation="vertical">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please Leave A Comment"
            android:layout_gravity="center"
            android:textAlignment="center"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.textfield.TextInputLayout
                style="@style/TextInputStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Type a comment here . . ."
                app:layout_constraintWidth_percent="0.90"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="15sp"
                    android:lines="5" />
            </com.google.android.material.textfield.TextInputLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimaryLight"
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="20dp"/>

    </LinearLayout>

</LinearLayout>
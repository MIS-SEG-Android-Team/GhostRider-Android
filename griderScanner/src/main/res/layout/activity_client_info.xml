<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ClientInfo">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/GhostRiderMaterialTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_client"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/material_tool_bar"
            app:popupTheme="@style/GhostRiderMaterialTheme.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="15dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/lbl_list_GoCasNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="GoCas No. : 437Z19000052"
                android:textSize="18sp"
                android:textColor="@color/textColor_Black"
                android:gravity="start"
                tools:ignore="HardcodedText"
                android:fontFamily="@font/roboto_medium"
                tools:targetApi="jelly_bean"/>

<!--            <TextView-->
<!--                android:id="@+id/lbl_applicationSent"-->
<!--                android:layout_width="0dp"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_weight=".5"-->
<!--                android:text="Sent"-->
<!--                android:fontFamily="@font/roboto_bold"-->
<!--                android:gravity="end|center_vertical"-->
<!--                android:textSize="16sp"-->
<!--                android:textColor="#27AE60"-->
<!--                android:drawableTint="#27AE60"-->
<!--                app:drawableRightCompat="@drawable/ic_application_sent" />-->

<!--            <ImageButton-->
<!--                android:id="@+id/btn_deleteApplication"-->
<!--                android:layout_width="0dp"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_weight=".2"-->
<!--                android:src="@drawable/ic_application_delete"-->
<!--                style="@style/Widget.AppCompat.Button.Borderless"-->
<!--                tools:ignore="ContentDescription" />-->

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:padding="3dp"
            android:background="@color/guanzon_orange"/>

        <TextView
            android:id="@+id/lbl_list_applicantName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Garcia, Michael Permison"
            android:textSize="16sp"
            android:textColor="@color/textColor_Black"
            tools:ignore="HardcodedText"
            android:fontFamily="@font/roboto_medium"
            tools:targetApi="jelly_bean"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".6"
                android:text="Transaction No. :"
                android:textSize="16sp"
                android:textColor="@color/textColor_Black"
                android:gravity="start"
                tools:ignore="HardcodedText"
                android:fontFamily="@font/roboto_regular"
                tools:targetApi="jelly_bean"/>

            <TextView
                android:id="@+id/lbl_list_applicationTransNo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="#437Z19000052"
                android:textSize="16sp"
                android:textColor="@color/textColor_Black"
                android:gravity="end"
                tools:ignore="HardcodedText"
                android:fontFamily="@font/roboto_regular"
                tools:targetApi="jelly_bean"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:text="Date Applied :"
                android:textSize="16sp"
                android:textColor="@color/textColor_Black"
                android:gravity="start"
                tools:ignore="HardcodedText"
                android:fontFamily="@font/roboto_regular"
                tools:targetApi="jelly_bean"/>

            <TextView
                android:id="@+id/lbl_list_applicationDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="December 12, 2019"
                android:textColor="@color/textColor_Black"
                android:gravity="end"
                tools:ignore="HardcodedText"
                android:fontFamily="@font/roboto_regular"
                tools:targetApi="jelly_bean"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:text="Date Sent :"
                android:textSize="16sp"
                android:textColor="@color/textColor_Black"
                android:gravity="start"
                tools:ignore="HardcodedText"
                android:fontFamily="@font/roboto_regular"
                tools:targetApi="jelly_bean"/>

            <TextView
                android:id="@+id/lbl_list_dateSent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="December 12, 2019"
                android:textColor="@color/textColor_Black"
                android:gravity="end"
                tools:ignore="HardcodedText"
                android:fontFamily="@font/roboto_regular"
                tools:targetApi="jelly_bean"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:text="Status :"
                android:textSize="16sp"
                android:textColor="@color/textColor_Black"
                android:gravity="start"
                tools:ignore="HardcodedText"
                android:fontFamily="@font/roboto_regular"
                tools:targetApi="jelly_bean"/>

            <TextView
                android:id="@+id/lbl_list_applicationWithCI"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Approve with CI"
                android:textColor="@color/textColor_Black"
                android:gravity="end"
                tools:ignore="HardcodedText"
                android:fontFamily="@font/roboto_regular"
                tools:targetApi="jelly_bean"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:text="Date Approved :"
                android:textSize="16sp"
                android:textColor="@color/textColor_Black"
                android:gravity="start"
                tools:ignore="HardcodedText"
                android:fontFamily="@font/roboto_regular"
                tools:targetApi="jelly_bean"/>

            <TextView
                android:id="@+id/lbl_list_approvedDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="December 12, 2019"
                android:textColor="@color/textColor_Black"
                android:gravity="end"
                tools:ignore="HardcodedText"
                android:fontFamily="@font/roboto_regular"
                tools:targetApi="jelly_bean"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:padding="3dp"
            android:background="@color/guanzon_orange"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview_fileCodeInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" />
    </LinearLayout>

</LinearLayout>